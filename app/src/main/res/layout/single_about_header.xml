<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                xmlns:tools = "http://schemas.android.com/tools"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:orientation = "vertical"
                android:padding = "15dp"
    >

    <RelativeLayout
        android:id = "@+id/rl_single_about_header_up"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id = "@+id/civ_single_user_header_avatar"
            android:layout_width = "45dp"
            android:layout_height = "45dp"
            android:layout_centerVertical = "true"
            android:layout_marginRight = "15dp"
            />

        <TextView
            android:id = "@+id/tv_sinle_user_header_fullname"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_marginBottom = "5dp"
            android:layout_toRightOf = "@id/civ_single_user_header_avatar"
            android:textColor = "@color/black"
            android:textSize = "16sp"
            android:textStyle = "bold"
            tools:text = "Geek360"
            />

        <TextView
            android:id = "@+id/tv_single_user_header_date"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_below = "@id/tv_sinle_user_header_fullname"
            android:layout_toRightOf = "@id/civ_single_user_header_avatar"
            tools:text = "Member since"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_below = "@id/rl_single_about_header_up"
        android:orientation = "horizontal"
        android:paddingTop = "10dp"
        >

        <LinearLayout
            android:id = "@+id/ll_single_user_header_followers"
            android:layout_width = "0dp"

            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:orientation = "vertical"
            >

            <TextView
                android:id = "@+id/tv_single_user_header_followers"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_gravity = "center_horizontal"
                android:textColor = "@color/black"
                android:textSize = "16sp"
                tools:text = "0"
                />

            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_gravity = "center_horizontal"
                android:text = "Followers"
                />
        </LinearLayout>

        <LinearLayout
            android:id = "@+id/ll_single_user_header_following"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_toRightOf = "@id/ll_single_user_header_followers"
            android:layout_weight = "1"
            android:orientation = "vertical"
            >

            <TextView
                android:id = "@+id/tv_single_user_header_following"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_gravity = "center_horizontal"
                android:textColor = "@color/black"
                android:textSize = "16sp"
                tools:text = "0"
                />

            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_gravity = "center_horizontal"
                android:text = "Following"
                />
        </LinearLayout>

        <LinearLayout
            android:id = "@+id/ll_single_user_header_repos"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_toRightOf = "@id/ll_single_user_header_following"
            android:layout_weight = "1"
            android:orientation = "vertical"
            >

            <TextView
                android:id = "@+id/tv_single_user_header_repos"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_gravity = "center_horizontal"
                android:textColor = "@color/black"
                android:textSize = "16sp"
                tools:text = "0"
                />

            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_gravity = "center_horizontal"
                android:text = "Repos"
                />
        </LinearLayout>

        <LinearLayout
            android:id = "@+id/ll_single_user_header_Gists"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_toRightOf = "@id/ll_single_user_header_repos"
            android:layout_weight = "1"
            android:orientation = "vertical"
            >

            <TextView
                android:id = "@+id/tv_single_user_header_gists"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_gravity = "center_horizontal"
                android:textColor = "@color/black"
                android:textSize = "16sp"
                tools:text = "0"
                />

            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_gravity = "center_horizontal"
                android:text = "Following"
                />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>