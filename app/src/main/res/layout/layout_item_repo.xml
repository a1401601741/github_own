<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                xmlns:tools = "http://schemas.android.com/tools"
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:padding = "10dp"
    >

    <TextView
        android:id = "@+id/tv_repo_title"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:textColor = "@color/title_color"
        android:textSize = "20sp"
        tools:text = "a1401601741/paper"
        />

    <TextView
        android:id = "@+id/tv_repo_description"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_below = "@id/tv_repo_title"
        android:layout_marginTop = "5dp"
        android:textColor = "@color/description_color"
        android:textSize = "18sp"
        tools:text = "zhesshige "
        />

    <TextView
        android:id = "@+id/tv_repo_type"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_below = "@id/tv_repo_description"
        android:layout_gravity = "center_vertical"
        android:drawableLeft = "@drawable/language_small"
        android:gravity = "center"
        tools:text = "Java"
        />

    <TextView
        android:id = "@+id/tv_repo_starnumber"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_below = "@id/tv_repo_description"
        android:layout_toRightOf = "@+id/tv_repo_type"
        android:drawableLeft = "@drawable/fork_small"
        android:gravity = "center"
        tools:text = "Java"
        />

    <TextView
        android:id = "@+id/tv_repo_size"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_below = "@id/tv_repo_description"
        android:layout_toRightOf = "@id/tv_repo_starnumber"
        android:drawableLeft = "@drawable/size_small"
        android:gravity = "center"
        tools:text = "Java"
        />

</RelativeLayout>